<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-between">
      <div>
        <h1><%= @task.title %></h1>
        <p><%= @task.details %></p>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="taskStatus" disabled <%= @task.completed ? 'checked' : 'unchecked' %>>
          <label class="form-check-label" for="taskStatus">Task completed</label>
        </div>
      </div>

      <small><%= link_to 'edit that shit', edit_task_path, class: 'btn btn-primary' %></small>
      </div>
    <div class="col-12">
      <small><%= link_to 'back to list', tasks_path %></small>
    </div>
  </div>
</div>
